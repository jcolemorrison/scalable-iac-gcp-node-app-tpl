{
  "compilerOptions": {
    "outDir": "dist",
    "target": "es2017",
    "module": "nodenext",
    "strict": true,
    "allowJs": true,
    "strictNullChecks": false,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "nodenext",
  },
  "include": [
    "src"
  ]
}
